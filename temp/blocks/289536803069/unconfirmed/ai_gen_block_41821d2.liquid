{% doc %}
  @prompt
    create me an image banner where I can use a different picture for both desktop and mobile. I want to be able to change the size, width, corner radius, etc. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-responsive-banner-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0 auto;
  }

  .ai-responsive-banner__container-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-responsive-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.corner_radius }}px;
  }

  .ai-responsive-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-responsive-banner__image-{{ ai_gen_id }}--mobile {
    display: none;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.corner_radius }}px;
    position: relative;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-responsive-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-responsive-banner__container-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_width_percent }}%;
    }

    .ai-responsive-banner__image-{{ ai_gen_id }}--desktop {
      display: none;
    }

    .ai-responsive-banner__image-{{ ai_gen_id }}--mobile {
      display: block;
    }

    .ai-responsive-banner__image-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-responsive-banner__placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<div class="ai-responsive-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-responsive-banner__container-{{ ai_gen_id }}">
    <div class="ai-responsive-banner__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.desktop_image or block.settings.mobile_image %}
        {% if block.settings.desktop_image %}
          <img
            src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
            alt="{{ block.settings.desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
            class="ai-responsive-banner__image-{{ ai_gen_id }} ai-responsive-banner__image-{{ ai_gen_id }}--desktop"
          >
        {% endif %}

        {% if block.settings.mobile_image %}
          <img
            src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
            alt="{{ block.settings.mobile_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
            class="ai-responsive-banner__image-{{ ai_gen_id }} ai-responsive-banner__image-{{ ai_gen_id }}--mobile"
          >
        {% elsif block.settings.desktop_image %}
          <img
            src="{{ block.settings.desktop_image | image_url: width: 1000 }}"
            alt="{{ block.settings.desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
            class="ai-responsive-banner__image-{{ ai_gen_id }} ai-responsive-banner__image-{{ ai_gen_id }}--mobile"
          >
        {% endif %}
      {% else %}
        <div class="ai-responsive-banner__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-responsive-banner__empty-state-{{ ai_gen_id }}">
            Add desktop and mobile images
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Responsive image banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 200,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 600
    },
    {
      "type": "header",
      "content": "Mobile image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "mobile_width_percent",
      "label": "Mobile width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Corner radius",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Responsive image banner"
    }
  ]
}
{% endschema %}
