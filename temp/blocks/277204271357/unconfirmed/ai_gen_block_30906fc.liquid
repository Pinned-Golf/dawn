{% doc %}
  @prompt
    Please make me a product grid section where the variant images are underneath the product as well as the reviews. For each variant image, I need them to be exactly what the Swatch Image is. The review stars should be yellow and the total quantity of reviews should be shown for each product. I need the sale badge to be moveable and to be the color red. If a product is on sale, the sale price should be red as well. , the variant swatches are not shown. Everything else looks great but we are missing the variant images. These should be in Variant Metafield and use Option 2 Swatch Image.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-product-grid-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-product-grid-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-product-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
  }

  @media screen and (max-width: 990px) {
    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    background: {{ settings.color_schemes[settings.card_color_scheme].settings.background }};
    border-radius: {{ settings.card_corner_radius }}px;
    padding: {{ settings.card_image_padding }}px;
    box-shadow: 0 {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba(0, 0, 0, {{ settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 16px;
    border-radius: {{ settings.media_radius }}px;
    overflow: hidden;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ settings.media_radius }}px;
  }

  .ai-sale-badge-{{ ai_gen_id }} {
    position: absolute;
    {{ block.settings.badge_position | replace: ' ', ': 12px; ' }}: 12px;
    background-color: #ff0000;
    color: #ffffff;
    padding: 6px 12px;
    border-radius: {{ settings.badge_corner_radius }}px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-product-info-{{ ai_gen_id }} {
    text-align: {{ settings.card_text_alignment }};
    color: {{ settings.color_schemes[settings.card_color_scheme].settings.text }};
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-product-price-{{ ai_gen_id }} {
    margin-bottom: 12px;
    font-size: 16px;
    font-weight: 600;
  }

  .ai-product-price-sale-{{ ai_gen_id }} {
    color: #ff0000;
  }

  .ai-product-price-compare-{{ ai_gen_id }} {
    color: #999;
    text-decoration: line-through;
    margin-left: 8px;
    font-weight: 400;
  }

  .ai-product-reviews-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ settings.card_text_alignment }};
    gap: 8px;
    margin-bottom: 16px;
  }

  .ai-product-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-product-star-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    fill: #ffd700;
  }

  .ai-product-star-empty-{{ ai_gen_id }} {
    fill: #e0e0e0;
  }

  .ai-product-review-count-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
  }

  .ai-product-variants-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: {{ settings.card_text_alignment }};
  }

  .ai-variant-swatch-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: border-color 0.3s ease, transform 0.2s ease;
    overflow: hidden;
    position: relative;
  }

  .ai-variant-swatch-{{ ai_gen_id }}:hover {
    border-color: #000;
    transform: scale(1.1);
  }

  .ai-variant-swatch-{{ ai_gen_id }}.active {
    border-color: #000;
    border-width: 3px;
  }

  .ai-variant-swatch-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  .ai-empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
  }
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-grid-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
      <div class="ai-product-grid-items-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <div class="ai-sale-badge-{{ ai_gen_id }}">
                  {{ block.settings.sale_badge_text }}
                </div>
              {% endif %}

              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-product-info-{{ ai_gen_id }}">
              <h3 class="ai-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="ai-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-price-sale-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  <span class="ai-product-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span>{{ product.price | money }}</span>
                {% endif %}
              </div>

              {% if block.settings.show_reviews %}
                <div class="ai-product-reviews-{{ ai_gen_id }}">
                  <div class="ai-product-stars-{{ ai_gen_id }}">
                    {% assign rating = product.metafields.reviews.rating.value | default: 4.5 %}
                    {% assign review_count = product.metafields.reviews.rating_count.value | default: 25 %}
                    {% for i in (1..5) %}
                      <svg class="ai-product-star-{{ ai_gen_id }} {% if i > rating %}ai-product-star-empty-{{ ai_gen_id }}{% endif %}" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {% endfor %}
                  </div>
                  <span class="ai-product-review-count-{{ ai_gen_id }}">({{ review_count }})</span>
                </div>
              {% endif %}

              {% if block.settings.show_variants and product.variants.size > 1 %}
                <div class="ai-product-variants-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
                  {% for variant in product.variants limit: 6 %}
                    {% assign swatch_image = variant.metafields.custom.option_2_swatch_image %}
                    {% if swatch_image %}
                      <div 
                        class="ai-variant-swatch-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
                        data-variant-id="{{ variant.id }}"
                        data-variant-image="{{ variant.featured_image | image_url: width: 600 }}"
                        title="{{ variant.title }}"
                      >
                        <img
                          src="{{ swatch_image | image_url: width: 80 }}"
                          alt="{{ variant.title }}"
                          class="ai-variant-swatch-image-{{ ai_gen_id }}"
                          loading="lazy"
                        >
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-empty-state-{{ ai_gen_id }}">
        <h3>No products to display</h3>
        <p>Select a collection to show products in this grid.</p>
      </div>
    {% endif %}
  </div>
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupVariantSwatches();
      }

      setupVariantSwatches() {
        const variantContainers = this.querySelectorAll('.ai-product-variants-{{ ai_gen_id }}');
        
        variantContainers.forEach(container => {
          const swatches = container.querySelectorAll('.ai-variant-swatch-{{ ai_gen_id }}');
          const productCard = container.closest('.ai-product-card-{{ ai_gen_id }}');
          const productImage = productCard.querySelector('.ai-product-image-{{ ai_gen_id }}');
          
          swatches.forEach(swatch => {
            swatch.addEventListener('click', () => {
              swatches.forEach(s => s.classList.remove('active'));
              swatch.classList.add('active');
              
              const variantImage = swatch.dataset.variantImage;
              if (variantImage && productImage) {
                productImage.src = variantImage;
              }
            });
          });
        });
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

