{% doc %}
  @prompt
    product grid with reviews and variant swatches underneath the price. Please use Option 2 Swatch Image for the variant swatches., remove the view product button and put the variant swatches
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    padding: {{ block.settings.section_padding }}px 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 16px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-product-vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_font_size }}px;
    color: {{ block.settings.vendor_color }};
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    margin-bottom: 12px;
  }

  .ai-product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    color: {{ block.settings.compare_price_color }};
    margin-right: 8px;
  }

  .ai-product-reviews-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.text_alignment }};
    gap: 8px;
    margin-bottom: 16px;
    font-size: {{ block.settings.review_font_size }}px;
  }

  .ai-product-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-product-star-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    fill: {{ block.settings.star_color }};
  }

  .ai-product-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-product-review-count-{{ ai_gen_id }} {
    color: {{ block.settings.review_text_color }};
  }

  .ai-product-swatches-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-product-swatch-{{ ai_gen_id }} {
    width: {{ block.settings.swatch_size }}px;
    height: {{ block.settings.swatch_size }}px;
    border-radius: {{ block.settings.swatch_border_radius }}px;
    border: 2px solid {{ block.settings.swatch_border_color }};
    cursor: pointer;
    transition: transform 0.2s ease, border-color 0.2s ease;
    overflow: hidden;
    position: relative;
  }

  .ai-product-swatch-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    border-color: {{ block.settings.swatch_hover_border_color }};
  }

  .ai-product-swatch-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
    position: relative;
  }

  .ai-product-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-size: 16px;
  }
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.collection != blank %}
    {% assign products = block.settings.collection.products | limit: block.settings.products_to_show %}
    
    {% for product in products %}
      <div class="ai-product-card-{{ ai_gen_id }}">
        <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
          {% if product.featured_image %}
            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            </a>
          {% else %}
            <a href="{{ product.url }}">
              <div class="ai-product-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </a>
          {% endif %}
          
          {% if product.compare_at_price > product.price %}
            <div class="ai-product-badge-{{ ai_gen_id }}">
              Sale
            </div>
          {% elsif product.available == false %}
            <div class="ai-product-badge-{{ ai_gen_id }}">
              Sold Out
            </div>
          {% endif %}
        </div>

        {% if block.settings.show_vendor and product.vendor != blank %}
          <div class="ai-product-vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
        {% endif %}

        <h3 class="ai-product-title-{{ ai_gen_id }}">
          <a href="{{ product.url }}">{{ product.title }}</a>
        </h3>

        <div class="ai-product-price-{{ ai_gen_id }}">
          {% if product.compare_at_price > product.price %}
            <span class="ai-product-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
          {% endif %}
          {{ product.price | money }}
        </div>

        {% if block.settings.show_reviews %}
          <div class="ai-product-reviews-{{ ai_gen_id }}">
            <div class="ai-product-stars-{{ ai_gen_id }}">
              {% assign rating = block.settings.default_rating %}
              {% for i in (1..5) %}
                <svg class="ai-product-star-{{ ai_gen_id }} {% if i > rating %}ai-product-star-empty-{{ ai_gen_id }}{% endif %}" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% endfor %}
            </div>
            <span class="ai-product-review-count-{{ ai_gen_id }}">({{ block.settings.default_review_count }})</span>
          </div>
        {% endif %}

        {% if block.settings.show_swatches and product.options contains 'Color' %}
          <div class="ai-product-swatches-{{ ai_gen_id }}">
            {% assign color_option = product.options_by_name['Color'] %}
            {% if color_option %}
              {% for value in color_option.values limit: block.settings.max_swatches %}
                {% assign variant = product.variants | where: 'option1', value | first %}
                {% if variant and variant.featured_image %}
                  <div class="ai-product-swatch-{{ ai_gen_id }}" title="{{ value }}">
                    <img
                      src="{{ variant.featured_image | image_url: width: 100 }}"
                      alt="{{ value }}"
                      class="ai-product-swatch-image-{{ ai_gen_id }}"
                      loading="lazy"
                    >
                  </div>
                {% endif %}
              {% endfor %}
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  {% else %}
    <div class="ai-empty-state-{{ ai_gen_id }}">
      Select a collection to display products
    </div>
  {% endif %}
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupSwatchInteractions();
      }

      setupSwatchInteractions() {
        const swatches = this.querySelectorAll('.ai-product-swatch-{{ ai_gen_id }}');
        
        swatches.forEach(swatch => {
          swatch.addEventListener('click', (e) => {
            e.preventDefault();
            
            const productCard = swatch.closest('.ai-product-card-{{ ai_gen_id }}');
            const productImage = productCard.querySelector('.ai-product-image-{{ ai_gen_id }}');
            const swatchImage = swatch.querySelector('.ai-product-swatch-image-{{ ai_gen_id }}');
            
            if (productImage && swatchImage) {
              productImage.src = swatchImage.src.replace('width=100', 'width=600');
              productImage.alt = swatchImage.alt;
            }
            
            const allSwatches = productCard.querySelectorAll('.ai-product-swatch-{{ ai_gen_id }}');
            allSwatches.forEach(s => s.style.borderColor = '{{ block.settings.swatch_border_color }}');
            swatch.style.borderColor = '{{ block.settings.swatch_hover_border_color }}';
          });
        });
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

