{% doc %}
  @prompt
    Build me a multirow section of 5 rows where it is identical to the current shopify set up but instead of just pictures, you can use GIFs and videos as the media.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multirow-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-multirow-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.row_spacing }}px;
  }

  .ai-multirow-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ settings.spacing_grid_horizontal | times: 2 }}px;
    min-height: {{ block.settings.row_height }}px;
    border-radius: {{ settings.media_radius }}px;
    overflow: hidden;
    {% if settings.media_shadow_opacity > 0 %}
      box-shadow: {{ settings.media_shadow_horizontal_offset }}px {{ settings.media_shadow_vertical_offset }}px {{ settings.media_shadow_blur }}px rgba({{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'red' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'green' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'blue' }}, {{ settings.media_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
    background: {{ settings.color_schemes[block.settings.color_scheme].settings.background }};
    {% if settings.color_schemes[block.settings.color_scheme].settings.background_gradient != blank %}
      background: {{ settings.color_schemes[block.settings.color_scheme].settings.background_gradient }};
    {% endif %}
  }

  .ai-multirow-row-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-multirow-media-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    height: {{ block.settings.row_height }}px;
    overflow: hidden;
    border-radius: {{ settings.media_radius }}px;
    {% if settings.media_border_thickness > 0 %}
      border: {{ settings.media_border_thickness }}px solid rgba({{ settings.color_schemes[block.settings.color_scheme].settings.text | color_extract: 'red' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.text | color_extract: 'green' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.text | color_extract: 'blue' }}, {{ settings.media_border_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-multirow-media-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-multirow-media-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-multirow-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 12px;
    border-radius: 4px;
    pointer-events: none;
  }

  .ai-multirow-media-{{ ai_gen_id }} img,
  .ai-multirow-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-multirow-content-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ settings.spacing_grid_horizontal | times: 2 }}px;
    color: {{ settings.color_schemes[block.settings.color_scheme].settings.text }};
  }

  .ai-multirow-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: calc({{ block.settings.heading_size }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: {{ settings.color_schemes[block.settings.color_scheme].settings.text }};
  }

  .ai-multirow-text-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.text_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    line-height: 1.5;
    margin: 0 0 20px 0;
    color: {{ settings.color_schemes[block.settings.color_scheme].settings.text }};
  }

  .ai-multirow-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ settings.color_schemes[block.settings.color_scheme].settings.button }};
    color: {{ settings.color_schemes[block.settings.color_scheme].settings.button_label }};
    text-decoration: none;
    border-radius: {{ settings.buttons_radius }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc(14px * {{ settings.body_scale | divided_by: 100.0 }});
    transition: all 0.3s ease;
    {% if settings.buttons_border_thickness > 0 %}
      border: {{ settings.buttons_border_thickness }}px solid rgba({{ settings.color_schemes[block.settings.color_scheme].settings.button | color_extract: 'red' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.button | color_extract: 'green' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.button | color_extract: 'blue' }}, {{ settings.buttons_border_opacity | divided_by: 100.0 }});
    {% else %}
      border: none;
    {% endif %}
    {% if settings.buttons_shadow_opacity > 0 %}
      box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba({{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'red' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'green' }}, {{ settings.color_schemes[block.settings.color_scheme].settings.shadow | color_extract: 'blue' }}, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-multirow-button-{{ ai_gen_id }}:hover {
    {% if settings.animations_hover_elements == 'vertical-lift' %}
      transform: translateY(-2px);
    {% elsif settings.animations_hover_elements == '3d-lift' %}
      transform: translateY(-2px) scale(1.02);
    {% endif %}
    opacity: 0.9;
  }

  @media screen and (max-width: 749px) {
    .ai-multirow-row-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ settings.spacing_grid_vertical }}px;
      min-height: auto;
    }

    .ai-multirow-row-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-multirow-media-{{ ai_gen_id }} {
      width: 100%;
      height: {{ block.settings.mobile_media_height }}px;
    }

    .ai-multirow-content-{{ ai_gen_id }} {
      padding: {{ settings.spacing_grid_horizontal }}px;
      text-align: center;
    }

    .ai-multirow-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size | times: 0.8 }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    }

    .ai-multirow-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size | times: 0.9 }}px * {{ settings.body_scale | divided_by: 100.0 }});
    }
  }
{% endstyle %}

<div class="ai-multirow-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multirow-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign media_key = 'row_' | append: i | append: '_media'
        assign media_type_key = 'row_' | append: i | append: '_media_type'
        assign heading_key = 'row_' | append: i | append: '_heading'
        assign text_key = 'row_' | append: i | append: '_text'
        assign button_text_key = 'row_' | append: i | append: '_button_text'
        assign button_link_key = 'row_' | append: i | append: '_button_link'
        assign layout_key = 'row_' | append: i | append: '_layout'

        assign media = block.settings[media_key]
        assign media_type = block.settings[media_type_key]
        assign heading = block.settings[heading_key]
        assign text = block.settings[text_key]
        assign button_text = block.settings[button_text_key]
        assign button_link = block.settings[button_link_key]
        assign layout = block.settings[layout_key]

        assign has_content = false
        if heading != blank or text != blank or button_text != blank
          assign has_content = true
        endif
      %}

      {% if media != blank or has_content %}
        <div class="ai-multirow-row-{{ ai_gen_id }} {% if layout == 'media_right' %}ai-multirow-row-{{ ai_gen_id }}--reverse{% endif %}">
          <div class="ai-multirow-media-{{ ai_gen_id }}">
            {% if media != blank %}
              {% if media_type == 'video' %}
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  preload="metadata"
                  aria-label="{% if heading != blank %}{{ heading | strip_html }}{% else %}Row {{ i }} video{% endif %}"
                >
                  <source src="{{ media }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              {% else %}
                <img
                  src="{{ media | image_url: width: 1000 }}"
                  alt="{% if heading != blank %}{{ heading | strip_html }}{% else %}Row {{ i }} image{% endif %}"
                  loading="lazy"
                  width="{{ media.width }}"
                  height="{{ media.height }}"
                >
              {% endif %}
            {% else %}
              <div class="ai-multirow-media-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-multirow-empty-state-{{ ai_gen_id }}">
                  Add media for row {{ i }}
                </div>
              </div>
            {% endif %}
          </div>

          {% if has_content %}
            <div class="ai-multirow-content-{{ ai_gen_id }}">
              {% if heading != blank %}
                <h2 class="ai-multirow-heading-{{ ai_gen_id }}">{{ heading }}</h2>
              {% endif %}

              {% if text != blank %}
                <div class="ai-multirow-text-{{ ai_gen_id }}">{{ text }}</div>
              {% endif %}

              {% if button_text != blank and button_link != blank %}
                <a href="{{ button_link }}" class="ai-multirow-button-{{ ai_gen_id }}">
                  {{ button_text }}
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

