{% doc %}
  @prompt
    create me a image banner section that I can pick a different image for both desktop and mobile. , I also need to have the ability to have text overlay and buttons
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-image-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-image-banner__desktop-{{ ai_gen_id }} {
    display: block;
  }

  .ai-image-banner__mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-image-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: {{ block.settings.desktop_height }}px;
  }

  .ai-image-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-banner__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    padding: 40px;
    z-index: 1;
  }

  .ai-image-banner__text-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-banner__heading-{{ ai_gen_id }} {
    margin: 0 0 16px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
  }

  .ai-image-banner__subheading-{{ ai_gen_id }} {
    margin: 0 0 24px;
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-image-banner__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-image-banner__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-image-banner__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-image-banner__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_bg_hover }};
    border-color: {{ block.settings.primary_button_bg_hover }};
  }

  .ai-image-banner__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-image-banner__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_bg_hover }};
    border-color: {{ block.settings.secondary_button_border_hover }};
  }

  .ai-image-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-banner__desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-image-banner__mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-image-banner__placeholder-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_height }}px;
    }

    .ai-image-banner__content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-image-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-image-banner__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-image-banner__buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-image-banner__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-image-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-banner__desktop-{{ ai_gen_id }}">
    {% if block.settings.desktop_image %}
      <img
        src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
        alt="{{ block.settings.desktop_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.desktop_image.width }}"
        height="{{ block.settings.desktop_image.height }}"
        class="ai-image-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-image-banner__empty-state-{{ ai_gen_id }}">
          Add a desktop image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-image-banner__mobile-{{ ai_gen_id }}">
    {% if block.settings.mobile_image %}
      <img
        src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
        alt="{{ block.settings.mobile_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.mobile_image.width }}"
        height="{{ block.settings.mobile_image.height }}"
        class="ai-image-banner__image-{{ ai_gen_id }}"
      >
    {% elsif block.settings.desktop_image %}
      <img
        src="{{ block.settings.desktop_image | image_url: width: 1000 }}"
        alt="{{ block.settings.desktop_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.desktop_image.width }}"
        height="{{ block.settings.desktop_image.height }}"
        class="ai-image-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-image-banner__empty-state-{{ ai_gen_id }}">
          Add a mobile image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-image-banner__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-image-banner__content-{{ ai_gen_id }}">
    <div class="ai-image-banner__text-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-image-banner__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-image-banner__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank %}
        <div class="ai-image-banner__buttons-{{ ai_gen_id }}">
          {% if block.settings.primary_button_label != blank %}
            <a
              href="{{ block.settings.primary_button_link }}"
              class="ai-image-banner__button-{{ ai_gen_id }} ai-image-banner__button--primary-{{ ai_gen_id }}"
            >
              {{ block.settings.primary_button_label }}
            </a>
          {% endif %}

          {% if block.settings.secondary_button_label != blank %}
            <a
              href="{{ block.settings.secondary_button_link }}"
              class="ai-image-banner__button-{{ ai_gen_id }} ai-image-banner__button--secondary-{{ ai_gen_id }}"
            >
              {{ block.settings.secondary_button_label }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

