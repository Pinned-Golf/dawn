{% doc %}
  @prompt
    create me an image banner section that has options to change the imagery with desktop and mobile, I also want the ability to make the corners rounded
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-banner-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.corner_radius }}px;
  }

  .ai-image-banner-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height_desktop }}px;
    border-radius: {{ block.settings.corner_radius }}px;
    overflow: hidden;
  }

  .ai-image-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-image-banner-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-image-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-banner-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    width: 90%;
    max-width: 800px;
    z-index: 2;
  }

  .ai-image-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-image-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
  }

  .ai-image-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 16px;
    transition: background-color 0.3s ease;
  }

  .ai-image-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-image-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  @media screen and (max-width: 749px) {
    .ai-image-banner-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-image-banner-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-image-banner-mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-image-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-image-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<image-banner-{{ ai_gen_id }} class="ai-image-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-banner-wrapper-{{ ai_gen_id }}">
    {% if block.settings.show_overlay %}
      <div class="ai-image-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.desktop_image %}
      <img
        src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
        alt="{{ block.settings.desktop_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.desktop_image.width }}"
        height="{{ block.settings.desktop_image.height }}"
        class="ai-image-banner-image-{{ ai_gen_id }} ai-image-banner-desktop-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-banner-placeholder-{{ ai_gen_id }} ai-image-banner-desktop-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-image-banner-empty-state-{{ ai_gen_id }}">
          Add a desktop image
        </div>
      </div>
    {% endif %}

    {% if block.settings.mobile_image %}
      <img
        src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
        alt="{{ block.settings.mobile_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.mobile_image.width }}"
        height="{{ block.settings.mobile_image.height }}"
        class="ai-image-banner-image-{{ ai_gen_id }} ai-image-banner-mobile-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-banner-placeholder-{{ ai_gen_id }} ai-image-banner-mobile-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-image-banner-empty-state-{{ ai_gen_id }}">
          Add a mobile image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_content %}
      <div class="ai-image-banner-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-image-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.subheading != blank %}
          <p class="ai-image-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-banner-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</image-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('image-banner-{{ ai_gen_id }}', ImageBanner{{ ai_gen_id }});
  })();
</script>

